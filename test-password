import json
from random import *

num="0123456789"
alphanum="abcdefghijklmnopqrstuvwxyz0123456789ABCDEFGHIJKMNLOPQRSTUVWXYZ"
spalphanum="abcdefghijklmnopqrstuvwxyz0123456789ABCDEFGHIJKMNLOPQRSTUVWXYZ'#@+(){}"

passlen = int(input("Enter password length \n"))
randPass =[]

print("select the type of passwords \n1. Number\n2.Alphanum\n3.special alphanumeric\n")
Selecttype = int(input())

if Selecttype == 1:
    for i in range(passlen):
        randpass.append(choice(num))
elif Selecttype ==2:
    for i in range(passlen):
        randPass.append(choice(alphanum))
else:
    for i in range(passlen):
        randPass.append(choice(spalphanum))

result = "".join(randPass)

print(" Your random password is :" +result)
